module blinker (
    input clk,  // clock
    input rst,  // reset
    output blink
  ) {
  
  dff counter[25](.clk(clk), .rst(rst)); // use dff to create a 25 bit counter to implement flip flop

  always {
    blink = counter.q[24]; // connects output blink to the most significant bit of counter
    // most significant bit change after 2^24 cycles. time = 2^24/50MHz = .67s
    counter.d = counter.q+1; // connects dff's input to output + 1. everytime clk goes to high, q += 1
  }
}
